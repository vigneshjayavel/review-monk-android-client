<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/user_profile_image"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_marginLeft="4px"
        android:layout_marginRight="10px"
        android:layout_marginTop="4px"
        android:src="@drawable/ic_launcher" >
    </ImageView>

    <TextView
        android:id="@+id/user_profile_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textSize="20px"
         >
    </TextView>

   
    <TextView
        android:id="@+id/user_profile_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textSize="20px" >
    </TextView>
  
    <TextView
        android:id="@+id/user_profile_last_known"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="he"
        android:textSize="20px" >
    </TextView>

    <EditText
        android:id="@+id/user_profile_invite_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine" 
        android:hint="Invite Message">
    </EditText>

    <Button
         android:id="@+id/user_profile_send_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="34dp"
         android:onClick="newGadget"
         android:text="Send" 
         android:layout_gravity="center"/>
    
</LinearLayout>
